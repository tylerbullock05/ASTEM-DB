<Window
    x:Class="ASTEM_DB.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:color="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.ColorPicker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:ASTEM_DB.ViewModels"
    x:Name="rootWindow"
    Title="ASTEM DB"
    d:DesignHeight="700"
    d:DesignWidth="1000"
    x:DataType="vm:MainWindowViewModel"
    Icon="/Assets/avalonia-logo.ico"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>
    <Grid ColumnDefinitions="400,*,200" RowDefinitions="*">

        <!--  Left Sidebar  -->
        <Border
            Grid.Column="0"
            Background="#F0F0F0"
            BorderBrush="#F0F0F0"
            BorderThickness="0,0,1,0"
            CornerRadius="0">
            <TabControl Margin="10" SelectedIndex="0">
                <TabItem
                    FontSize="20"
                    FontWeight="DemiBold"
                    Header="Glaze Search">
                    <ScrollViewer Margin="0,30,0,0" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10" Spacing="5">
                            <color:ColorView
                                Margin="0,-10,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                IsAlphaVisible="False"
                                IsColorComponentsVisible="False"
                                IsColorModelVisible="False"
                                IsColorPaletteVisible="False"
                                IsColorPreviewVisible="True"
                                IsColorSpectrumVisible="True"
                                IsComponentSliderVisible="False"
                                Color="{Binding SelectedColor, Mode=TwoWay}" />

                            <CheckBox
                                Margin="0,10,0,0"
                                Content="Filter By Color"
                                IsChecked="{Binding FilterByColor, Mode=TwoWay}" />
                            <CheckBox
                                Margin="0,10,0,0"
                                Content="Filter By Color Name"
                                IsChecked="{Binding FilterByString, Mode=TwoWay}" />

                            <TextBlock Margin="0,0,0,0" Text="Glaze Type" />
                            <ComboBox ItemsSource="{Binding GlazeTypes}" SelectedItem="{Binding SelectedGlazeType, Mode=TwoWay}" />

                            <TextBlock Margin="0,0,0,0" Text="Surface Condition" />
                            <ComboBox ItemsSource="{Binding SurfaceConditions}" SelectedItem="{Binding SelectedSurfaceCondition, Mode=TwoWay}" />
                            <TextBlock Margin="0,0,0,0" Text="Firing Atmosphere" />
                            <ComboBox
                                Width="150"
                                ItemsSource="{Binding FiringTypes}"
                                SelectedItem="{Binding SelectedFiringType, Mode=TwoWay}" />
                            <TextBlock Margin="0,0,0,0" Text="Color Name" />
                            <ComboBox ItemsSource="{Binding ColorPalettes}" SelectedItem="{Binding SelectedColorPalette, Mode=TwoWay}" />
                            <Button
                                Width="100"
                                HorizontalAlignment="Right"
                                Command="{Binding SearchCommand}"
                                Content="Search" />
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Border>

        <!--  Main Content Area  -->
        <Grid
            Grid.Column="1"
            Margin="20"
            Background="#FFFFFF"
            RowDefinitions="*,Auto">
            <TextBlock IsVisible="{Binding IsFilterEmpty}" Text="NO GLAZES FOUND" />

            <!--  Image Grid  -->
            <ScrollViewer Margin="0,40,0,0" VerticalScrollBarVisibility="Auto">

                <ItemsControl ItemsSource="{Binding CardItems}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button
                                Width="150"
                                Height="150"
                                Margin="10,10,0,0"
                                Background="#FFFFFF"
                                Click="OnCardClicked">
                                <Border
                                    Width="150"
                                    Height="150"
                                    Margin="5"
                                    BorderBrush="Gray"
                                    BorderThickness="1"
                                    CornerRadius="4">
                                    <Image
                                        Width="120"
                                        Height="120"
                                        Source="{Binding Image}" />
                                </Border>
                            </Button>
                        </DataTemplate>

                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

        </Grid>
        <!--  Card Info Sidebar  -->
        <Border
            Grid.Column="2"
            Margin="5"
            Background="#F0F0F0"
            BorderBrush="Gray"
            BorderThickness="1"
            CornerRadius="6"
            IsVisible="{Binding IsSidebarVisible}">

            <DockPanel Width="200">
                <StackPanel Margin="10" DockPanel.Dock="Top">
                    <Image
                        Width="130"
                        Height="130"
                        Source="{Binding SelectedCard.Image}" />
                    <TextBlock FontWeight="Bold" Text="{Binding SelectedCard.Id}" />
                    <TextBlock Text="{Binding SelectedCard.GlazeTypeString}" />
                    <TextBlock Text="{Binding SelectedCard.FiringTypeString}" />
                    <TextBlock Text="{Binding SelectedCard.SoilTypeString}" />
                    <TextBlock Text="{Binding SelectedCard.SurfaceConditionString}" />
                    <TextBlock Text="{Binding SelectedCard.ChemicalCompositionString}" />
                    <TextBlock Text="{Binding SelectedCard.ColorName}" />
                    <!-- <TextBlock Text="{Binding SelectedCard.ImagePath}"/> -->
                    <!-- <TextBlock Text="{Binding SelectedCard.Lab}" /> -->

                </StackPanel>
            </DockPanel>
        </Border>

    </Grid>

</Window>
